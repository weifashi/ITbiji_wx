page{ 
 height: 100%; 
} 
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2
} 
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.login-from { 
  flex: auto; 
  height:100%; 
  /* padding: 0 100rpx;  */
} 
  
.inputView { 
  background-color: #fff; 
  line-height: 44px; 
  overflow: hidden;
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px
} 
  
.loginLab { 
 margin: 0px 15px; 
 color: #545454; 
 font-size: 14px;
 float: left; 
} 
.inputText { 
 flex: block; 
 float: left; 
 text-align: left; 
 margin-right: 22px; 
 margin-top: 11px; 
 color: #1AAD19; 
 font-size: 14px
} 
  
.line { 
 width: 100%; 
 height: 0px; 
 background-color: #cccccc; 
 margin-top: 1px; 
} 
/*按钮*/
.loginBtnView { 
 width: 100%; 
 height: auto; 
 background-color: #f2f2f2; 
 margin-top: 0px; 
 margin-bottom: 0px; 
} 
  
.loginBtn { 
 width: 100%; 
 margin-top: 35px; 
}

.logo{
  width: 80px;
  height: 90px;
  text-align: center;
  margin:90rpx auto;
}
.open{
  width: 80px;
  height: 80px;
  border-radius:100%; 
  overflow: hidden;
}
open-data{
  display: inline-block;
}